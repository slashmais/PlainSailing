
<div style="margin-left: 50px; ">
	<h2>Sign Up</h2>
	<p>
		<%= form_with model: @user, url: sign_up_path do |f| %>
			<table>
				<tr><td align="center"><%= f.label 'email' %></td><td><%= f.text_field :email %></td></tr>
				<tr><td align="center"><%= f.label 'password' %></td><td><%= f.password_field :password %></td></tr>
				<tr><td align="center"><%= f.label 'password_confirmation' %></td><td><%= f.password_field :password_confirmation %></td></tr>
				<tr><td></td><td><%= f.submit 'Sign Up' %></td></tr>
			</table>
		<% end %>
	</p>
</div>
